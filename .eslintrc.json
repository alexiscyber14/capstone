{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "camelcase": "off",
      "eol-last": "off",
      "no-empty":"off",
      "radix":"off",
      "no-plusplus":"off",
      "no-unused-expressions":"off",
      "prefer-const":"off",
      "no-use-before-define":"off",
      "import/extensions": [ 1, {
        "js": "always", "json": "always"
      }]
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }
